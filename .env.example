# API Endpoints
API_BASE_URL=https://api.example.com

# Website URL
WEB_BASE_URL=https://app.copin.io/

# Browser Configuration
DEFAULT_BROWSER=chrome
HEADLESS_MODE=true
SCREENSHOT_ON_FAILURE=true

# Authentication Configuration
EMAIL=test@example.com
DEFAULT_OTP=123456
X_API_KEY=xxxx

# Test Configuration
RETRY_COUNT=1
DEFAULT_TIMEOUT=30
IMPLICIT_WAIT=10

# Thread Configuration
THREAD_COUNT=4
PARALLEL_MODE=methods

# ============================================
# Lark Notification Configuration
# ============================================
# How to get webhook URL:
# 1. Open Lark Group Chat
# 2. Settings (⚙️) > Bots > Add Bot
# 3. Select "Custom Bot"
# 4. Name: "Copin Test Automation"
# 5. Copy Webhook URL
#
# Example: https://open.larksuite.com/open-apis/bot/v2/hook/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
# Leave empty to disable notifications
LARK_WEBHOOK_URL=xxxx